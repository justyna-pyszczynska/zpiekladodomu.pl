// Example: Vercel KV Enabled Analytics
// Rename this file to track.js and configure KV for persistent storage

import { kv } from '@vercel/kv';

export default async function handler(req, res) {
  res.setHeader('Access-Control-Allow-Origin', '*');
  res.setHeader('Access-Control-Allow-Methods', 'POST, GET, OPTIONS');
  res.setHeader('Access-Control-Allow-Headers', 'Content-Type');
  
  if (req.method === 'OPTIONS') {
    return res.status(200).end();
  }
  
  if (req.method === 'POST') {
    try {
      const data = typeof req.body === 'string' ? JSON.parse(req.body) : req.body;
      const dateKey = new Date(data.timestamp).toISOString().split('T')[0];
      
      // Increment counters
      await kv.incr(`pageview:${data.path}`);
      await kv.incr(`daily:${dateKey}`);
      await kv.incr('total:pageviews');
      
      // Store session info
      const sessionKey = `session:${data.sessionId}`;
      await kv.hset(sessionKey, {
        startTime: data.timestamp,
        lastSeen: data.timestamp,
        path: data.path
      });
      await kv.expire(sessionKey, 86400); // Expire after 24h
      
      // Store page details
      await kv.zadd('pages:views', { score: 1, member: data.path });
      
      return res.json({ success: true });
    } catch (error) {
      console.error('KV tracking error:', error);
      return res.status(500).json({ error: 'Failed to track' });
    }
  }
  
  if (req.method === 'GET') {
    try {
      const totalViews = await kv.get('total:pageviews') || 0;
      const sessions = await kv.keys('session:*');
      const topPages = await kv.zrevrange('pages:views', 0, 20, { WITHSCORES: true });
      
      return res.json({
        totalPageViews: totalViews,
        uniqueSessions: sessions.length,
        topPages: topPages.map((page, i) => ({
          path: page,
          views: topPages[i + 1] || 0
        })).filter((_, i) => i % 2 === 0)
      });
    } catch (error) {
      console.error('KV fetch error:', error);
      return res.status(500).json({ error: 'Failed to fetch analytics' });
    }
  }
  
  return res.status(405).json({ error: 'Method not allowed' });
}











